{
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "compilerOptions": {
    "checkJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "dist/*",
    "coverage/*",
    "docs/*",
    "node_modules",
    "node_modules/*",
    "**/node_modules/*"
  ]
}